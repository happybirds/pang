if("<%= @no_sign_1day %>"){
	if("<%= @distance_1day_direction1.size %>" != 0 &&  <%= @distance_1day_direction1_true %>){
		$('.route1daydir1 > li > span').removeClass('active color_red')
		document.getElementsByName("route1daydir1").forEach(function(res,index){
		if( $(res).attr('data-name').length > 0 && '<%= raw @distance_1day_direction1%>'.indexOf($(res).attr('data-name'))!= '-1' ){
					$(res).children(":first-child").addClass('active')
					$(res).children(":last-child").addClass('color_red')
			if(index == document.getElementsByName("route1daydir1").length - 1 ){
					$('.route1daydir1 > li:last-child > span').removeClass('active color_red')
			}
		}
	})
	}

