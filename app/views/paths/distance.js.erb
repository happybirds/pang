// $('.route1daydir1 > span .distance_show_finish').html('<%= raw @distance_1day_direction1_finish%>')

document.getElementsByName("route1daydir1").forEach(function(res,index){
		// console.log("<%= @distance_1day_direction1%>")
	if( $(res).attr('data-name').length > 0 && '<%= raw @distance_1day_direction1%>'.indexOf($(res).attr('data-name'))!= '-1' ){
		console.log($(res).attr('data-name'))
		$(res).addClass('active')
		if(index == $(res).length - 1 ){
				$('.route1daydir2 li:last-child').removeClass('active')
		}
	}
})
}

