		$('.route3day').css('display','none')
	}
	if(s==4){
		$('.route1daydir1').css('display','none')
		$('.route1daydir2').css('display','none')
		$('.route1eveningdir1').css('display','none')
		$('.route1eveningdir2').css('display','block')
		$('.route2day').css('display','none')
		$('.route3day').css('display','none')
	}
	if(s==5){
		$('.route1daydir1').css('display','none')
		$('.route1daydir2').css('display','none')
		$('.route1eveningdir1').css('display','none')
		$('.route1eveningdir2').css('display','none')
		$('.route2day').css('display','block')
		$('.route3day').css('display','none')
	}
	if(s==6){
		$('.route1daydir1').css('display','none')
		$('.route1daydir2').css('display','none')
		$('.route1eveningdir1').css('display','none')
		$('.route1eveningdir2').css('display','none')
		$('.route2day').css('display','none')
		$('.route3day').css('display','block')
	}
}
