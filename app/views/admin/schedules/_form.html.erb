<%= form_for([:admin, @schedule], html: { class: 'form-horizontal' }) do |f| %>

  <div class="form-body">
    <div class="form-group form-md-line-input">
      <%= f.label '课程', class: 'col-sm-3 control-label' %>
      <div class="col-md-7">
        <%= f.text_field :title, class: "form-control" %>
        <div class="form-control-focus"> </div>
      </div>
    </div>
    <div class="form-group form-md-line-input">
      <%= f.label '时间', class: 'col-sm-3 control-label' %>
      <div class="col-md-3">
        <%= f.text_field :start, class: "form-control" %>
        <div class="form-control-focus"> </div>
      </div>
      <div class="col-md-1">
        To
      </div>
      <div class="col-md-3">
        <%= f.text_field :end, class: "form-control" %>
        <div class="form-control-focus"> </div>
      </div>
    </div>
    <div class="form-group form-md-line-input">
      <%= f.label '星期几', class: 'col-sm-3 control-label' %>
      <div class="col-md-7">
          <%= f.select :date, Schedule.dates.keys.to_a,{},{class:"form-control"} %>
        <div class="form-control-focus"> </div>
      </div>
    </div>
    <div class="form-group form-md-line-input">
      <%= f.label '楼宇', class: 'col-sm-3 control-label' %>
      <div class="col-md-7">
          <%= f.select :address, Schedule.addresses.keys.to_a,{},{class:"form-control"} %>
        <div class="form-control-focus"> </div>
      </div>
    </div>
    <div class="form-group form-md-line-input">
      <%= f.label '教室', class: 'col-sm-3 control-label' %>
      <div class="col-md-7">
        <%= f.text_field :classroom, class: "form-control" %>
        <div class="form-control-focus"> </div>
      </div>
    </div>

  </div>
  <div class="form-actions">
    <div class="row">
      <div class="col-md-offset-4 col-md-10">
        <button type="submit" class="btn green btn-outline col-md-2" id="btn_ok" data-loading-text="提交中">提交</button>
      </div>
    </div>
  </div>
<% end %>
