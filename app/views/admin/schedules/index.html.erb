<div class="row">
  <div class="col-md-12">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">列表</div>
        </div>
        <div class="portlet-body flip-scroll">
          <table class="table table-striped table-bordered table-hover">
             <thead>
              <tr>
                <th>标题</th>
                <th>地址</th>
                <th>时间</th>
                <th>星期几</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
              <% @schedules.each do |schedule| %>
              <tr>
                <td>
                  <%= schedule.title%>
                </td>
                <td><%= schedule.address%></td>
                <td><%= schedule.start  %>-<%= schedule.end  %></td>
                <td><%= schedule.date  %></td>
                <td>
                  <%= link_to "编辑", edit_admin_schedule_path(schedule)%>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
</div>


<script type="text/javascript">
  $("#schedules").addClass("active");
  $("#schedules").parents(".nav-item").addClass("active open")
  $("#schedules_link").append("<span class='selected'></span>")
</script>
