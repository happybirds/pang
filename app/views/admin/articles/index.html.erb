<div class="row">
  <div class="col-md-12">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">列表</div>
            <div class="actions btn-group">
                <a href="javascript:;" class="dropdown-toggle btn-outline dropdown-toggle btn dark btn-circle btn-sm" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                  列表<i class="fa fa-angle-down"></i>
                </a>
                <a href="#serch_div" class="dropdown-toggle btn-outline dropdown-toggle btn dark btn-circle btn-sm" data-toggle="modal">
                  <i class="icon-magnifier"></i>搜索</a>
              </div>
        </div>
        <div class="portlet-body flip-scroll">
          <table class="table table-striped table-bordered table-hover">
             <thead>
              <tr>
                <th>标题</th>
                <th>分类</th>
                <th>创建时间</th>
                <th>更新时间</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
              <% @articles.each do |article| %>
              <tr>
                <td>
                  <%#= link_to admin_article_path(article) do %>
                    <%#= image_tag article.icon.url, width:'40px' %>
                  <%# end %>
                  <%= article.title%>
                </td>
                <td><%= article.catalog%></td>
                <td><%= article.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
                <td><%= article.updated_at.strftime('%Y-%m-%d %H:%M:%S')  %></td>
                <td>
      
                  <%= link_to "编辑", edit_admin_article_path(article)%>

                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @articles %>
        </div>
    </div>
  </div>
</div>

<%= render 'query' %>

<script type="text/javascript">
  $("#news").addClass("active");
  $("#news").parents(".nav-item").addClass("active open")
  $("#news_link").append("<span class='selected'></span>")
</script>