<div class="row">
  <div class="col-md-12">
    <div class="portlet box green">
        <div class="portlet-title">
          <div class="caption">详情</div>
        </div>

        <div class="portlet-body form">
          <form class="form-horizontal" role="form">
            <div class="form-body">

              <div class="row" >
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label col-md-4">标题:</label>
                        <div class="col-md-8">
                            <p class="form-control-static"><%= @article.title %></p>
                        </div>
                    </div>
                </div>
              </div>
              <div class="row" >
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label col-md-4">图:</label>
                        <div class="col-md-8">
                            <p class="form-control-static"><%= image_tag @article.icon.url, width:'100px', id: 'img' %></p>
                        </div>
                    </div>
                </div>
              </div>


              <div class="row" >
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label col-md-4">详情:</label>
                        <div class="col-md-8">
                            <p class="form-control-static"><%= raw @article.content %></p>
                        </div>
                    </div>
                </div>
              </div>

            </div>
          </form>
        </div>
    </div>
  </div>
</div>


<script type="text/javascript">
  $("#news").addClass("active");
  $("#news").parents(".nav-item").addClass("active open")
  $("#news_link").append("<span class='selected'></span>")
</script>
